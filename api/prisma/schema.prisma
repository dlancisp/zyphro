// api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// EL USUARIO
model User {
  id              String   @id // ID de Clerk
  email           String   @unique
  password        String?  // Opcional
  createdAt       DateTime @default(now())

  // Configuración del Dead Man Switch
  switchEnabled   Boolean  @default(false)
  recipientEmail  String?
  checkInInterval Int      @default(30)
  lastCheckIn     DateTime?
  nextTriggerDate DateTime?
  dmsNote         String?  // Nota final

  // Relación con los secretos de la bóveda
  secrets         Secret[]
}

// LA BÓVEDA (Adaptada para XChaCha20)
model Secret {
  id        String   @id @default(cuid())
  
  title     String
  type      String   // 'password', 'note', 'crypto', 'file'
  
  // DATOS CIFRADOS (XChaCha20-Poly1305)
  content   String   // El Ciphertext (+ Auth Tag, que suele ir pegado al final)
  nonce     String?  // El Nonce de 24 bytes (Necesario para descifrar)

  createdAt DateTime @default(now())
  
  // Relación con Usuario
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}