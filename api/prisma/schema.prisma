// api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// EL USUARIO (Integrado con Clerk)
model User {
  id              String   @id // ID de Clerk (user_...)
  email           String   @unique
  createdAt       DateTime @default(now())

  // Configuración Maestra del Dead Man Switch (DMS)
  switchEnabled   Boolean   @default(false)
  recipientEmail  String?
  checkInInterval Int       @default(30) // Días entre check-ins
  lastCheckIn     DateTime? @default(now())
  nextTriggerDate DateTime? // Fecha en la que el sistema enviará los datos si no hay check-in
  dmsNote         String?   // Mensaje final cifrado

  // Relaciones
  secrets         Secret[]
}

// LA BÓVEDA, DROPS Y SECRETOS
model Secret {
  id        String   @id @default(cuid())
  userId    String?  // Opcional para permitir "Cloud Drops" anónimos
  user      User?    @relation(fields: [userId], references: [id])
  
  title     String   // ej: "Archivo de 24h" o "Password Facebook"
  type      String   // 'password', 'note', 'drop'
  content   String   // El contenido cifrado o la URL del archivo en la nube
  nonce     String?  // Parámetro técnico para el cifrado XChaCha20
  
  // Metadatos para archivos (Drops)
  fileSize  Int?     // Tamaño en bytes
  fileName  String?
  
  createdAt DateTime @default(now())
  expiresAt DateTime? // Para el modo "Cloud 24h", esto será createdAt + 24h
}