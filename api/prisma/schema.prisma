// api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// EL USUARIO
model User {
  id              String   @id // ID de Clerk
  email           String   @unique
  password        String?  // Opcional
  createdAt       DateTime @default(now())

  // Configuraci칩n del Dead Man Switch
  switchEnabled   Boolean  @default(false)
  recipientEmail  String?
  checkInInterval Int      @default(30)
  lastCheckIn     DateTime?
  nextTriggerDate DateTime?
  dmsNote         String?  // Nota final

  // Relaci칩n con los secretos de la b칩veda
  secrets         Secret[]
}

// LA B칍VEDA Y LOS DROPS
model Secret {
  id        String   @id @default(cuid())
  title     String
  type      String   // 'password', 'note', 'drop'
  
  content   String   // El texto cifrado
  
  // 游녢 CAMBIO IMPORTANTE: A침ade '?' al final para hacerlo opcional
  nonce     String?  

  createdAt DateTime @default(now())
  expiresAt DateTime?
  userId    String?  
  user      User?    @relation(fields: [userId], references: [id])
}