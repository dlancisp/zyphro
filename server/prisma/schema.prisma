// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Secret {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  expiresAt DateTime? // (Opcional) Si quieres añadir fechas personalizadas en el futuro
  
  // --- AÑADIR ESTO ---
  userId    String?  // Puede ser null (si el usuario es anónimo)
  user      User?    @relation(fields: [userId], references: [id])
}


model User {
  id        String   @id @default(uuid()) // ID único (ej: "a1b2-c3d4...")
  email     String   @unique              // El email no se puede repetir
  password  String                        // Aquí guardaremos el HASH, no la contraseña real
  createdAt DateTime @default(now())
  
  // Relación: Un usuario puede tener muchos secretos
  secrets   Secret[]
}

// Modelo para el Dead Man's Switch
model Switch {
  id               String   @id @default(uuid())
  recipientEmail   String
  encryptedContent String   // Las claves o mensaje final
  checkInFrequency Int      // Minutos requeridos para dar señal de vida
  lastCheckIn      DateTime @default(now())
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
}